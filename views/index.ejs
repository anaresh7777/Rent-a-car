<script>
$(document).ready(function() {

    $("#selectbtn").click(function () {
        var cars = $("#cars").val();
        /*
         * Perform some validation here.
         */
        getcarData(cars);
        function getcarData(cars) {

            var data = JSON.stringify({ cars: cars });
            $.ajax({
                url: "http://localhost:3000/listofcars/",
                // the URL for the request
                type: "POST",
                // whether this is a POST or GET request
                contentType: "application/json",
                data: data,
                dataType: "json",
                // the type of data we expect back
                success: function (responseJson) {
                    var obj = jQuery.parseJSON(JSON.stringify(responseJson));
                    var objlength = obj.length;
                    if( objlength > 0) {

                        $('#searchresult').empty();
                        $.each(obj, function (key, value) {
                            $('#searchresult').append('<div class="list_result" style="position: relative" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html"><h4>Car Name: ' + value.carname + '</h4><p>Car Model: ' + value.carmodel + '</p><p> Engine Size: ' + value.enginesize + '</p><p>Car Price: ' + value.price + '</p><p>Car Place: ' + value.place + '</p><p>Pickup Date: ' + value.pickupdate + '</p><p>Return Date:' + value.returndate + '</p><img src="http://localhost:3000/images/'+ value.Image +'" style="width:250px; position: absolute; left: 180px; top: 70px"><p><form action="/userdetails"> <input onclick="myFunction()" type="Submit" id="reservebtn" class="reserve-btn" /></form></p></div>');
                        });
                    } else {
                        $('#searchresult').empty();

                        $('#searchresult').append('<div class="list_result"><p>Sorry...No car found..!! Search another car</p></div>');
                    }
                },
                error: function (xhr, status) {
                    // code run if request fails; raw request and status
                    console.log("Sorry, there was a problem!");
                },
                complete: function (xhr, status) {  	// code to run regardless of success or failure
                    console.log("The request is completed!");
                }
            })
        }
    });
});
function myFunction()
{
    var search = document.getElementById("reservebtn").value;
    window.location = '/userdetails='+search;
}
</script>

